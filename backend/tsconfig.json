{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./src",
    "outDir": "./dist",
    /* Environment Settings */
    "module": "ES2020", // ES modules para usar import/export
    "moduleResolution": "bundler", // Permite importar sin extensiones .js
    "target": "ES2020", // Una versi√≥n estable y moderna
    "esModuleInterop": true, // Permite importar paquetes CommonJS como Express
    "forceConsistentCasingInFileNames": true,
    /* Other Outputs */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    /* Stricter Typechecking Options */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    /* Recommended Options */
    "skipLibCheck": true,
    "isolatedModules": true,
    "moduleDetection": "force"
  },
  "include": [
    "src/**/*"
  ], // Asegura que TS procese todos tus archivos en src
  "exclude": [
    "node_modules"
  ]
}